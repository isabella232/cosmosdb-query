{
  "name": "@zeit/cosmosdb-query",
  "version": "0.0.2",
  "license": "UNLICENSED",
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "flow-remove-types src/ -d lib/ && yarn build-parser",
    "build-parser": "pegjs -o lib/parser.js src/parser.pegjs",
    "format": "prettier --write '{src,test}/**/*.js'",
    "format-staged": "git diff --cached --name-only '*.js' | xargs prettier --list-different",
    "lint": "eslint --ignore-path .gitignore .",
    "lint-staged": "git diff --cached --name-only '*.js' | xargs eslint",
    "prepublish": "yarn build",
    "test": "yarn build && best -I 'test/*.js' -r flow-remove-types/register"
  },
  "dependencies": {
    "@babel/generator": "7.0.0-rc.3",
    "@babel/traverse": "7.0.0-rc.3"
  },
  "devDependencies": {
    "@zeit/best": "0.4.3",
    "@zeit/git-hooks": "0.1.4",
    "babel-eslint": "8.2.6",
    "eslint": "5.4.0",
    "eslint-config-airbnb": "17.1.0",
    "eslint-config-prettier": "3.0.1",
    "eslint-plugin-flowtype": "2.50.0",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-jsx-a11y": "6.1.1",
    "eslint-plugin-react": "7.11.1",
    "flow-bin": "0.79.1",
    "flow-remove-types": "1.2.3",
    "pegjs": "0.10.0",
    "prettier": "1.14.2"
  },
  "eslintConfig": {
    "extends": [
      "airbnb",
      "plugin:flowtype/recommended",
      "prettier"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "plugins": [
      "flowtype"
    ]
  },
  "git": {
    "pre-commit": [
      "flow",
      "lint-staged",
      "format-staged"
    ]
  }
}
